{
  "rules": {
    "calendarEvents": {
      ".read": "root.child('users').child(auth.uid).child('roles/user').exists() === true",
      ".write": "root.child('users').child(auth.uid).child('roles/admin').exists() === true"
    },
    "calendars": {
      ".read": "root.child('users').child(auth.uid).child('roles/user').exists() === true",
      ".write": "root.child('users').child(auth.uid).child('roles/super').exists() === true",
    },
    "contacts": {
      ".read": "root.child('users').child(auth.uid).child('roles/user').exists() === true",
      ".write": "root.child('users').child(auth.uid).child('roles/admin').exists() === true",
    },
    "messages": {
      ".read": "root.child('users').child(auth.uid).child('roles/user').exists() === true",
      ".write": "root.child('users').child(auth.uid).child('roles/user').exists() === true"
    },
    "photos": {
      ".read": "root.child('users').child(auth.uid).child('roles/user').exists() === true",
      ".write": "root.child('users').child(auth.uid).child('roles/admin').exists() === true",
    },
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid || root.child('users').child(auth.uid).child('roles/super').exists() === true",
        ".write": "$uid === auth.uid || root.child('users').child(auth.uid).child('roles/super').exists() === true"
      }
    }
  }
}